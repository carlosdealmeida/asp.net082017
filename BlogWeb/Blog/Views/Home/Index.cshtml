@model List<Blog.Models.Post>

<h3>@ViewBag.Titulo1</h3>

@if (Model.Count > 0)
{
    foreach (var p in Model)
    {
        <article>
            <h2>@p.Titulo</h2>
            <p>@p.Resumo</p>
            <p>@p.Categoria</p>
        </article>
    }
}
else
{
    <article>
        <p>Sua busca não retornou nenhum resultado</p>
    </article>

}
