
@{
    Layout = null;
}

@model List<Blog.Models.Post>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <a href="/Home/NovoPost">Novo</a>
    <table>
        <thead>
            <tr>
                <th>Título</th>
                <th>Resumo</th>
                <th>Categoria</th>
                <th>Publicado</th>
                <th colspan="3">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Titulo</td>
                    <td>@p.Resumo</td>
                    <td><a href="/Home/Categorias/@p.Categoria">@p.Categoria</a></td>
                    <td>
                    @if (p.Publicado)
                    {
                        @Html.Raw(string.Format("{0:dd/MM/yyyy hh:mm:ss}", p.Data));
                    }
                    else
                    {
                        @Html.Raw("Não");
                    }
                    </td>
                    <td><a href="/Home/RemovePost/@p.Id">Excluir</a></td>
                    <td><a href="/Home/AlteraPost/@p.Id">Editar</a></td>
                    <td><a href="/Home/Publicar/@p.Id">Publicar</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
